@model LivrariaAnnaMVC.Models.AuthorModel

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes do Autor</h1>

<div>
    <h4>Autor</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">Nome
      </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AuthorName)
        </dd>
        <dt class = "col-sm-2">
         Sobrenome
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AuthorLastName)
        </dd>
        <dt class = "col-sm-2">
           Email
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
           Nascimento
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Birth)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.AuthorId">Editar</a> |
    <a asp-action="Index">Retornar para a lista</a>
</div>

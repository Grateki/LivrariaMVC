@model IEnumerable<LivrariaAnnaMVC.Models.BookModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Livros</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Cadastrar livro</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Título</th>
            <th scope="col">ISBN</th>
            <th scope="col">Ano de Publicação</th>
            <th scope="col">Autor</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Isbn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author.AuthorLastName)
            </td>
            <td>
                    <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                        <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.BookId">Editar</a> 
                        <a asp-action="Details" class="btn btn-warning" asp-route-id="@item.BookId">Detalhes</a> 
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.BookId">Deletar</a>
                    </div>
                
            </td>
        </tr>
}
    </tbody>
</table>
